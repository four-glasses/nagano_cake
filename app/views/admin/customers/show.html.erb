<% provide(:title, "会員一覧") %>
  <h2 class="head-line title_h2 text-center">
  <%= @customer.last_name + @customer.first_name %>さんの会員詳細
  </h2>
  <div class="row">
    <div class="col-xs-8">
      <div class="field">
        <p>
          顧客ID　　　　　<%= @customer.id %>
        </p>
      </div>
      <div class="field">
        <p>
          氏名　　　　　　<%= @customer.last_name %> 　<%= @customer.first_name %>
        </p>
      </div>
      <div class="field">
        <p>
          フリガナ　　　　<%= @customer.last_name_kana %> <%= @customer.first_name_kana %>
        </p>
      </div>
      <div class="field">
        <p>
          郵便番号　　　　<%= @customer.postal_code %>
        </p>
      </div>
      <div class="field">
        <p>
          住所　　　　　　<%= @customer.address %>
        </p>
      </div>
      <div class="field">
        <p>
          電話番号　　　　<%= @customer.telephone %>
        </p>
      </div>
      <div class="field">
        <p>
          メールアドレス　<%= @customer.email%>
        </p>
      </div>
       <div>
         <% if @customer.is_deleted == false %>
         有効会員
         <% else %>
         退会済み
         <% end %>
       </div>
      <div class="actions">
        <%= link_to "編集する",edit_admin_customer_path(@customer), class: "glyphicon glyphicon-pencil btn btn-success edit_shipping_addres_#{@customer.id}" %>
        <!--%= link_to " 注文履歴一覧を見る", current_index_admin_order_path(@customer), class: "glyphicon glyphicon-folder-open btn btn-info" %-->
      </div>
    </div>
  </div>