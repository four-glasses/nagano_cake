<% provide(:title, "会員情報編集") %>
<div class="row">
  <div calss="col-xs-12">
    <h2 class="head-line title_h2 text-center">
       <%= @customer.last_name + @customer.first_name %>さんの会員詳細
    </h2>
       <%= form_with(model: @customer, url:admin_customer_path, local: true ,method: :patch) do |f| %>
    <div class="col-xs-10">
    <table>
      <tr>
       <td><%= f.label :"会員ID" %></td>
       <td> <%= f.label :"#{@customer.id}" %></td>
       <td></td>

      </tr>
      <tr>
        <td><%= f.label :"氏名" %></td>
       <td> <%= f.text_field :last_name %></td>
       <td><%= f.text_field :first_name %></td>

      </tr>
      <tr>
        <td> <%= f.label :"フリガナ" %></td>
       <td><%= f.text_field :last_name_kana %></td>
       <td> <%= f.text_field :first_name_kana %></td>

      </tr>
      <tr>
        <td>  <%= f.label :"郵便番号", autofocus: true%></td>
       <td><%= f.text_field :postal_code %></td>
       <td></td>

      </tr>
      <tr>
        <td> <%= f.label :"住所" %></td>
       <td colspan="2"><%= f.text_field :address, autofocus: true  %>
      </td>


      </tr>
      <tr>
        <td><%= f.label :"電話番号" %></td>
       <td>  <%= f.text_field :telephone %></td>
       <td></td>

      </tr>
      <tr>
        <td> <%= f.label :"メールアドレス" %></td>
       <td> <%= f.text_field :email%></td>
       <td></td>

      </tr>
      <tr>
        <td> <%= f.label :"会員ステータス" %></td>
       <td><%= f.radio_button :is_deleted, true %>
        　<%= f.label :is_deleted, "退会済", {value: :true, style: "display: inline-block;"} %>
        　<%= f.radio_button :is_deleted, false %>
        　<%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %></td>
       <td></td>

      </tr>


    </table>

    </div>
      <div class="actions  col-xs-9 col-xs-offset-4">
        <%= f.submit '変更を保存する' ,class: "btn btn-primary" %>
      </div>
  <% end %>
    <div class="col-xs-12">
      <%= link_to "戻る", admin_customer_path, class: "glyphicon glyphicon-home btn btn-info" %>
    </div>
  </div>
</div>