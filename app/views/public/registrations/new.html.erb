
<h2>Sign up</h2>

<div class="form-horizontal" role="form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!--名前-->
    <div class="row">
      <div class="form-group">
        <div class="col-xs-2">
          <p>名前</p>
        </div>
        <div class="col-xs-1">
          <%= f.label :last_name, "(姓)", style: "float: left;" %>
        </div>
        <div class="col-xs-3">
          <%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>
        </div>
        <div class="col-xs-1">
          <%= f.label :first_name, "(名)" , style: "float: left;" %>
        </div>
        <div class="col-xs-4">
          <%= f.text_field :first_name, autofocus: true, placeholder: "道子" %>
        </div>
      </div>
    </div>

    <!--名前（カナ）-->
    <div class="row">
      <div class="form-group">
        <div class="col-xs-2">
          <p>フリガナ</p>
        </div>
        <div class="col-xs-1">
          <%= f.label :last_name_kana, "(セイ)" %>
        </div>
        <div class="col-xs-3">
          <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" %>
        </div>
        <div class="col-xs-1">
          <%= f.label :first_name_kana, "(メイ)" %>
        </div>
        <div class="col-xs-4">
          <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" %>
        </div>
      </div>
    </div>

    <!--メールアドレス-->
    <div class="row">
      <div class="form-group">
        <div class="col-xs-3">
          <%= f.label :email, "メールアドレス" %>
        </div>
        <div class="col-xs-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
        </div>
      </div>
    </div>

    <!--郵便番号-->
    <div class="row">
      <div class="form-group">
        <div class="col-xs-3">
          <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
        </div>
        <div class="col-xs-4">
          <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %>
        </div>
      </div>
    </div>

    <!--住所-->
    <div class="row">
      <div class="form-group">
        <div class="col-xs-3">
          <%= f.label :address, "住所" %>
        </div>
        <div class="col-xs-8">
          <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", style: "width: 100%;" %>
        </div>
      </div>
    </div>

    <!--電話番号-->
    <div class="row">
      <div class="form-group">
        <div class="col-xs-3">
          <%= f.label :telephone, "電話番号" %>
        </div>
        <div class="col-xs-4">
          <%= f.text_field :telephone, autofocus: true, placeholder: "0000000000" %>
        </div>
      </div>
    </div>

    <!--パスワード-->
     <div class="row">
      <div class="form-group">
        <div class="col-xs-3">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
        </div>
        <div class="col-xs-4">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>
    </div>

    <!--確認用パスワード-->
    <div class="row">
      <div class="form-group">
        <div class="col-xs-3">
          <%= f.label :password_confirmation, "パスワード（確認用）" %>
        </div>
        <div class="col-xs-4">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
    </div>
    <br>

    <!--新規登録ボタン-->
    <div class="row">
      <div class="col-xs-2 col-xs-offset-5">
        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      </div>
    </div>
  <% end %>
  </div>

<%= render "devise/shared/links" %>
