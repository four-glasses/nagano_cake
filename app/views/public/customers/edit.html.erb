<h3>会員情報編集</h3>

<%= form_with model: @customer, url: customers_path, method: :patch do |f|%>

  <div class="field">
    <%= f.label :last_name, "姓" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label :first_name, "名" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <!--名前（カナ）-->
  <div class="field">
    <%= f.label :last_name_kana, "セイ" %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana, "メイ" %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <!--郵便番号-->
  <div class="field">
    <%= f.label :postal_code, "郵便番号（ハイフンなし）" %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <!--住所-->
  <div class="field">
    <%= f.label :address, "住所" %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <!--電話番号-->
  <div class="field">
    <%= f.label :telephone, "電話番号" %><br />
    <%= f.text_field :telephone, autofocus: true, autocomplete: "telephone" %>
  </div>

  <!--メールアドレス-->
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存する", class: "btn btn-success m-3" %>
  </div>

  <div>
    <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger m-3" %>
  </div>

<% end %>